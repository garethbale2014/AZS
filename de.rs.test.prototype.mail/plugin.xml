                  <instanceof
                        value="de.rs.firdaous.model.WorkOrder">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>
         <handler
            class="de.rs.prototype.firdaous.handler.AddressDeleteHandler"
            commandId="auftraglöschen">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
