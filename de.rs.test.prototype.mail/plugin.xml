            </with>
         </activeWhen>
      </handler>
      <handler
            class="de.rs.prototype.firdaous.handler.AddressDeleteHandler"
            commandId="standesamtformular">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="de.rs.firdaous.model.WorkOrder">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>
      
      <handler
            class="de.rs.prototype.firdaous.handler.AllFormularHandler"
            commandId="alleAuftragFormulare">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="de.rs.firdaous.model.WorkOrder">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>
      
      <handler
            class="de.rs.prototype.firdaous.handler.AddressDeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="de.rs.firdaous.model.WorkOrder">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>>
   </extension>

</plugin>
